{
  "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "target": "es2016",
      "lib": [
          "es2020"
      ],
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "types": ["node", "jest"],
      "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "tests",
      "jest.config.cjs",
      ".vscode"
  ]
}
